#include <iostream>
using namespace std;

int interpolationSearch(int arr[], int size, int key) {
    int low = 0;
    int high = size - 1;

    while (low <= high && key >= arr[low] && key <= arr[high]) {
        // Предотвращение деления на ноль
        if (arr[low] == arr[high]) {
            if (arr[low] == key)
                return low;
            else
                return -1;
        }

        // Вычисление предполагаемой позиции
        int pos = low + ((double)(key - arr[low]) * (high - low)) / (arr[high] - arr[low]);

        // Проверка границ
        if (pos < low || pos > high)
            return -1;

        if (arr[pos] == key)
            return pos;
        if (arr[pos] < key)
            low = pos + 1;
        else
            high = pos - 1;
    }

    return -1; // Не найдено
}

int main() {
    int arr[] = {10, 12, 13, 16, 18, 19, 20, 21, 22, 23, 24};
    int size = sizeof(arr) / sizeof(arr[0]);
    int key = 18;

    int index = interpolationSearch(arr, size, key);
    if (index != -1)
        cout << "Элемент найден по индексу: " << index << endl;
    else
        cout << "Элемент не найден" << endl;

    return 0;
}
